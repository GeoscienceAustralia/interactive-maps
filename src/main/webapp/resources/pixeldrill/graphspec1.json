{
  "width": 500,
  "height": 200,
  "data": [
    {
		"name": "NBRT",
		"format": {"type": "json", "parse": {"value":"number", "time":"date"}},
		"transform": [{"type": "filter", "test": "datum.value > 0"}]

    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {"data": "NBRT", "field": "time"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {"data": "NBRT", "field": "value"}
    },
    {
      "name": "color", 
      "type": "ordinal", 
      "domain": {"data": "NBRT", "field": "band"},
      "range": "category10"
    }
  ],
  "legends": [
		{
		"fill": "color",
		"title": "Legend",
		"properties": {
			"symbols": 
				{
				"strokeWidth": {"value": 0},
				"shape": {"value": "square"},
				"opacity": {"value": 1}
				},
			"legend": 
				{				
				"fill": {"value": "white"},				
				"opacity": {"value": 0.4}
				}
			}
		}
	],
  "axes": [
    {"type": "x", "scale": "x", "tickSizeEnd": 0, "grid": true, "title": "Date Time"},
    {"type": "y", "scale": "y", "grid": true, "title": "Pixel Value"}
  ],  
  "marks": [
    {
	"name": "pixels",
      "type": "group",
      "from": {
        "data": "NBRT",
        "transform": [{"type": "facet", "groupby": ["band"]}]
      },
      "marks": [
		{
		  "type": "line",
		  "properties": {
			"enter": {
				"x": {"scale": "x", "field": "time"},
				"y": {"scale": "y", "field": "value"},
				"stroke": {"scale": "color", "field": "band"},
				"strokeWidth": {"value": 2}
			}
		  }
		},
		{
			"type": "symbol",
			"from": {"data": "NBRT"},
			"properties": {
				"enter": {
				"x": {"scale": "x", "field": "time"},
				"y": {"scale": "y", "field": "value"},
				"fill": {"value": "#fff"},
				"stroke": {"value": "#000"},
				"strokeWidth": {"value": 1},
				"size": {"value": 49}
				}
			}
		},
		{
		"type": "text",
		"properties": 
			{
			"enter": {
				"x": {"value": 0},
				"y": {"value": -20},
				"fontSize": {"value": 20},
				"fontWeight": {"value": "normal"},
				"fill": {"value": "steelblue"},
				"text": {"template": "Landsat 8"}
				}
			}
		}
      ]
    }
  ]
}
